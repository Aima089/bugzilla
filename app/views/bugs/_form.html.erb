<%= form_with(model: [@project, @bug], local: true) do |form| %>
  <% if @bug.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bug.errors.count, "error") %> prohibited this bug from being saved:</h2>
      <ul>
        <% @bug.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div data-controller="bug-form">
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :bug_type %>
      <%= form.select :bug_type, options_for_select(Bug.bug_types.keys.map { |type| [type.humanize, type] }, @bug.bug_type), {}, { id: 'bug_type_select', data: { target: "bug-form.bugType" } } %>
    </div>

    <div class="field">
      <%= form.label :status %>
      <%= form.select :status, [], {}, { id: 'status_select', data: { target: "bug-form.status" } } %>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div class="field">
      <%= form.label :deadline %>
      <%= form.date_select :deadline %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  </div>
<% end %>
